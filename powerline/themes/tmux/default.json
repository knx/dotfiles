{
	"use_non_breaking_spaces": false,
  "update_interval": 3,
	"dividers": {
		"left": {
			"hard": " ",
			"soft": " "
		},
		"right": {
			"hard": " ",
			"soft": " "
		}
	},
	"spaces": 1,
  "outer_padding": 1,
	"segments": {
		"right": [
      {
        "function": "powerline.segments.common.players.spotify",
        "name": "spotify",
        "priority": 200,
        "interval": 10,
        "before": " ",
        "after": " |",
        "args": {
          "state_symbols": {
            "play": "",
            "pause": "",
            "stop": "",
            "fallback": ""
          },
          "format": "{state_symbol} {artist} - {title}"
        }
      },
      {
        "function":"powerline.segments.common.net.network_load",
        "name": "network_load",
        "interval": 10,
        "priority": 400,
        "args": {
          "si_prefix": true,
          "suffix": "",
          "recv_format": "{value:>4}",
          "sent_format": " {value:>4}"
        }
      },
      {
        "function": "powerline.segments.common.net.internal_ip",
        "interval": 10,
				"priority": 400,
        "before": " ",
        "args": {
          "interface": "en0"
        }
      },
      {
        "function": "powerline.segments.common.net.external_ip",
        "interval": 10,
				"priority": 400,
        "before": " "
      },
			{
				"function": "powerline.segments.common.sys.cpu_load_percent",
        "before": "",
        "interval": 5,
				"priority": 200,
        "args" : {
          "format": "{:5.1f}"
        }
			},
      {
        "function":"powerline.segments.common.bat.battery",
        "interval": 10,
        "args": {
          "online": "",
          "offline": " "
        }
      },
			{
				"function": "powerline.segments.common.time.date",
				"name": "time",
        "priority": 100,
				"args": {
					"format": "%H:%M",
					"istime": true
				}
			},
      {
        "function":"powerline.segments.common.env.user",
        "interval": 10,
        "priority": 400,
        "before": " "
      },
			{
				"function": "powerline.segments.common.net.hostname",
        "before": " ",
        "interval": 10,
        "priority": 400,
        "args": {
          "exclude_domain": true
        }
			}
		]
	}
}
